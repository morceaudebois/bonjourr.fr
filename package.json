{
	"name": "bonjourr-website",
	"scripts": {
		"dev": "astro dev",
		"build": "astro build",
		"preview": "astro build && astro preview"
	},
	"devDependencies": {
		"@astrojs/sitemap": "^3.6.0",
		"@cloudflare/workers-types": "^4.20251225.0",
		"astro": "^5.16.6",
		"astro-expressive-code": "^0.41.5",
		"detect-browser": "^5.3.0",
		"prettier": "^3.7.4",
		"prettier-plugin-astro": "^0.14.1",
		"sharp": "^0.34.5",
		"typescript": "^5.9.3",
		"vite": "^7.3.0"
	},
	"prettier": {
		"semi": false,
		"tabWidth": 4,
		"useTabs": true,
		"singleQuote": false,
		"printWidth": 100,
		"plugins": [
			"prettier-plugin-astro"
		],
		"overrides": [
			{
				"files": "*.astro",
				"options": {
					"parser": "astro"
				}
			}
		]
	}
}

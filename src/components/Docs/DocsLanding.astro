<style is:global>
	.content {
		max-width: 1200px !important;
	}

	section {
		max-width: 760px;
		margin: auto;
	}
</style>

<style>
	.docs-summary {
		display: grid;
		max-width: 100%;
		margin: 5em 0 2em;
		grid-gap: 1em;
		grid-template-columns: repeat(3, 1fr);

		@media only screen and (max-width: 1000px) {
			grid-template-columns: 1fr 1fr;
		}

		@media only screen and (max-width: 700px) {
			grid-template-columns: 1fr;
		}
	}

	.docs-summary a {
		display: flex;
		align-items: center;
		gap: 1.5em;
		padding: 1em;
		color: unset;
		cursor: pointer;
		border-radius: 15px;
		text-decoration: none;
		border: 1px solid transparent;
	}

	.docs-summary a:hover {
		background: #252525;
		border: 1px solid #fff1;

		@media (prefers-color-scheme: light) {
			background: #e9e9e9;
		}
	}

	.docs-summary a span {
		font-size: 2.5em;
	}

	.docs-summary a span {
		font-size: 2.5em;
	}

	.docs-summary a div div {
		font-size: 1.6em;
		font-weight: 500;
		margin-bottom: 0.3em;
	}

	.docs-summary h3,
	.docs-summary img {
		padding: 0;
		margin: 0;
	}

	.docs-summary p {
		margin-top: 8px;
		margin-bottom: 0;
		font-size: 0.9em;
		opacity: 0.9;
	}
</style>
